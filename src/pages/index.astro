---
import '../styles/global.css';
import Layout from '../layouts/layout.astro';
import CategoryCard from '../components/category-card.astro';
import Tag from '../components/tag.astro';
import Header from '../components/ui/Header.astro';
import { categories } from '../data/categories';
---

<Layout>
	<main class="container mx-auto px-4 py-8">
		<Header
			title="AI Resources Directory"
			description="A curated collection of the best AI tools, courses, and resources. From code editors to learning platforms, find everything you need to build, learn, and innovate with AI."
		/>

		<nav class="flex flex-wrap gap-2 justify-center mb-12" aria-label="Categories">
			{categories.map((category) => (
				<Tag href={`/category/${category.categorySlug}`}>
					{category.title} ({category.items.length})
				</Tag>
			))}
		</nav>

		<div class="space-y-16">
			{categories.map((category) => (
				<CategoryCard
					title={category.title}
					description={category.description}
					items={category.items}
					categorySlug={category.categorySlug}
				/>
			))}
		</div>
	</main>
</Layout>
