---
import '../styles/global.css';
import Footer from '../components/footer.astro';
import Navbar from '../components/ui/Navbar.astro';

const { siteTitle = 'AI Resources', description = 'A curated collection of the best AI tools, courses, and resources. From code editors to learning platforms, find everything you need to build, learn, and innovate with AI.', pageTitle } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{pageTitle ? `${siteTitle} - ${pageTitle}` : siteTitle}</title>
		<meta name="description" content={description} />
		<meta property="og:title" content={pageTitle ? `${siteTitle} - ${pageTitle}` : siteTitle} />
		<meta property="og:url" content="https://airesources.dev" />
		<meta property="og:image" content="/og_image_updated.png" />
		<meta property="og:description" content={description} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:image" content="/og_image_updated.png" />
		<meta name="twitter:title" content={pageTitle ? `${siteTitle} - ${pageTitle}` : siteTitle} />
		<meta name="twitter:description" content={description} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<script type="text/partytown" defer data-domain="airesources.dev" src="https://plausible.io/js/script.outbound-links.pageview-props.tagged-events.js"></script>
	</head>
	<body class="bg-neutral-100 dark:bg-neutral-900 min-h-screen flex flex-col">
		<Navbar />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>
