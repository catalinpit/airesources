---
import ResourceCard from './resource-card.astro';
import Button from './ui/Button.astro';

interface Props {
  title: string;
  description: string;
  items: Array<{
    name: string;
    description: string;
    link: string;
    iconUrl: string;
  }>;
  categorySlug: string;
}

const { title, description, items, categorySlug } = Astro.props;
---

<section class="space-y-6 p-10 w-full bg-white dark:bg-[#1E1E1E] rounded-2xl shadow-[0_0_0_1px_rgba(0,0,0,0.1)_inset,0_0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_-0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_1px_2px_rgba(0,0,0,0.1)] dark:shadow-[0_0_0_0.5px_rgba(255,255,255,0.06)_inset,0_0.5px_0.5px_rgba(255,255,255,0.1)_inset,0_-0.5px_0.5px_rgba(255,255,255,0.1)_inset,0_0.5px_1px_rgba(0,0,0,0.3),0_1px_2px_rgba(0,0,0,0.4)]">
  <div>
    <h2 class="text-2xl leading-10 font-bold text-gray-900 dark:text-white">
      {title}
    </h2>
    <p class="text-neutral-500 dark:text-neutral-400">
      {description}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {items.slice(0, 10).map((item) => (
      <ResourceCard
        name={item.name}
        description={item.description}
        link={item.link}
        iconUrl={item.iconUrl}
        categorySlug={categorySlug}
      />
    ))}
  </div>

  <div class="flex justify-center">
    <Button href={`/category/${categorySlug}`}>
      View all
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd" />
      </svg>
    </Button>
  </div>
</section> 
