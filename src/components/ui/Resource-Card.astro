---
interface Props {
  name: string;
  description: string;
  link: string;
  iconUrl: string;
  categorySlug: string;
}

const { name, description, link, iconUrl, categorySlug } = Astro.props;

const productSlug = name.toLowerCase().replace(/\s+/g, '-');
---

<a 
  href={`/${categorySlug}/${productSlug}`}
  class="group w-full relative hover:border-neutral-400 dark:hover:border-neutral-700/50 transition-all duration-200 h-full flex flex-col"
>
  <div class="bg-gradient-to-br from-neutral-50 to-neutral-50/60 dark:from-neutral-800 dark:to-neutral-800/60 rounded-lg shadow-[0_0_0_1px_rgba(0,0,0,0.1)_inset,0_0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_-0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_1px_2px_rgba(0,0,0,0.1)] dark:shadow-[0_0_0_0.5px_rgba(255,255,255,0.06)_inset,0_0.5px_0.5px_rgba(255,255,255,0.1)_inset,0_-0.5px_0.5px_rgba(255,255,255,0.1)_inset,0_0.5px_1px_rgba(0,0,0,0.3),0_1px_2px_rgba(0,0,0,0.4)] flex-1 flex flex-col group-hover:scale-[1.05] transition-transform duration-200">
    <div class="p-6 flex-1 flex flex-col">
      <div class="flex items-center gap-3 mb-3">
        <div class="flex-shrink-0">
          <img 
            src={iconUrl} 
            alt={`${name} icon`}
            class="w-8 h-8 rounded-lg object-contain bg-white dark:bg-neutral-800 p-1.5 border border-neutral-200 dark:border-neutral-700"
          />
        </div>
        <h3 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
          {name}
        </h3>
      </div>
      <p class="text-gray-600 dark:text-gray-300 flex-1">
        {description}
      </p>
    </div>
  </div>
</a> 
