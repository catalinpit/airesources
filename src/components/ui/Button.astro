---
interface Props {
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const { href, type = 'button', class: className = '' } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class:list={['bg-gradient-to-b from-indigo-500 to-indigo-600 text-white dark:from-indigo-600 dark:to-indigo-700 hover:from-indigo-600 hover:to-indigo-700 dark:hover:from-indigo-500 dark:hover:to-indigo-600 h-9 px-4 py-2 relative inline-flex items-center text-base font-medium leading-6 rounded-[9px] shadow-[0_0_0_1px_rgba(0,0,0,0.1)_inset,0_0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_-0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_1px_2px_rgba(0,0,0,0.1)] dark:shadow-[0_0_0_1px_rgba(255,255,255,0.05)_inset] hover:shadow-[0_0_0_1px_rgba(0,0,0,0.1)_inset,0_1px_1px_rgba(0,0,0,0.1)_inset,0_-1px_1px_rgba(0,0,0,0.1)_inset,0_2px_4px_rgba(0,0,0,0.15)] dark:hover:shadow-[0_0_0_1px_rgba(255,255,255,0.1)_inset,0_1px_2px_rgba(0,0,0,0.3)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500/20 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-150', className]}
    >
      <slot />
    </a>
  ) : (
    <button
      type={type}
      class:list={[
        'bg-gradient-to-b from-indigo-500 to-indigo-600 text-white dark:from-indigo-600 dark:to-indigo-700 hover:from-indigo-600 hover:to-indigo-700 dark:hover:from-indigo-500 dark:hover:to-indigo-600 h-9 px-4 py-2 relative inline-flex items-center text-base font-medium leading-6 rounded-[9px] shadow-[0_0_0_1px_rgba(0,0,0,0.1)_inset,0_0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_-0.5px_0.5px_rgba(0,0,0,0.05)_inset,0_1px_2px_rgba(0,0,0,0.1)] dark:shadow-[0_0_0_1px_rgba(255,255,255,0.05)_inset] hover:shadow-[0_0_0_1px_rgba(0,0,0,0.1)_inset,0_1px_1px_rgba(0,0,0,0.1)_inset,0_-1px_1px_rgba(0,0,0,0.1)_inset,0_2px_4px_rgba(0,0,0,0.15)] dark:hover:shadow-[0_0_0_1px_rgba(255,255,255,0.1)_inset,0_1px_2px_rgba(0,0,0,0.3)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500/20 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-150',
        className
      ]}
    >
      <slot />
    </button>
  )
}
