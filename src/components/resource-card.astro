---
interface Props {
  name: string;
  description: string;
  link: string;
  iconUrl: string;
}

const { name, description, link, iconUrl } = Astro.props;
---

<a 
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="group w-full relative hover:border-neutral-400 dark:hover:border-neutral-700/50 transition-colors h-full flex flex-col"
>
  <div class="border rounded-lg bg-gradient-to-br from-neutral-100 to-neutral-100/60 border-neutral-300 shadow-[2px_0_8px_rgba(0,_0,_0,_0.15)] dark:from-neutral-800 dark:to-neutral-800/60 dark:border-neutral-800 dark:shadow-inset[2px_0_8px_rgba(0,_0,_0,_0.3)] flex-1 flex flex-col">
    <div class="p-6 flex-1 flex flex-col">
      <div class="flex items-center gap-3 mb-1">
        <img 
          src={iconUrl} 
          alt={`${name} icon`}
          class="w-6 h-6 rounded-sm object-contain"
        />
        <h3 class="text-lg pb-2 font-bold text-gray-900 dark:text-neutral-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
          {name}
        </h3>
      </div>
      <p class="text-gray-700 dark:text-neutral-300/90 flex-1">
        {description}
      </p>
    </div>
  </div>
</a> 
